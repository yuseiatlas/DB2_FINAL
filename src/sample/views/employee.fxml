<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0"
      prefWidth="602.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" spacing="10"
      fx:controller="sample.controllers.empController">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <TableView fx:id="employeesTable" prefHeight="293.0" prefWidth="600.0">
                    <columns>
                        <TableColumn fx:id="fNameCol" prefWidth="120.0" text="FIRST NAME"/>
                        <TableColumn fx:id="lNameCol" prefWidth="120.0" text="LAST NAME"/>
                        <TableColumn fx:id="dobCol" prefWidth="120" text="DATE OF BIRTH"/>
                        <TableColumn fx:id="salaryCol" prefWidth="120" text="BASE SALARY"/>
                        <TableColumn fx:id="marriedCol" prefWidth="120" text="MARRIED?"/>
                    </columns>
                </TableView>
            </content>
        </ScrollPane>
        <HBox prefHeight="109.0" prefWidth="600.0">
            <children>
                <VBox prefHeight="108.0" prefWidth="424.0">
                    <children>
                        <GridPane vgap="20" hgap="50">
                            <padding>
                                <Insets top="5" right="5" bottom="5" left="5"/>
                            </padding>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="ID:"/>
                                <Label text="Fist Name:" GridPane.rowIndex="1"/>
                                <Label text="Last Name:" GridPane.rowIndex="2"/>
                                <Label text="Date Of Birth:" GridPane.rowIndex="3"/>
                                <Label text="Married: " GridPane.rowIndex="4"/>
                                <TextField fx:id="idTF" GridPane.columnIndex="1"/>
                                <TextField fx:id="fNameTF" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TextField fx:id="lNameTF" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <DatePicker fx:id="dobDP" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <HBox GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <CheckBox style="-fx-padding: 5px;">YES</CheckBox>
                                    <CheckBox style="-fx-padding: 5px;">NO</CheckBox>
                                </HBox>
                                <!--<TextField fx:id="marriedTF" GridPane.columnIndex="1" GridPane.rowIndex="4"/>-->
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                <VBox prefHeight="108.0" prefWidth="193.0" spacing="15">
                    <children>
                        <Button fx:id="addAuthor" mnemonicParsing="false" text="Add/Edit Employee"
                                onAction="#handleAddEmployee"/>
                        <Button fx:id="deleteAuthor" mnemonicParsing="false" text="Delete Employee"
                                onAction="#handleDeleteEmployee"/>
                        <Button fx:id="clearFields" mnemonicParsing="false" text="Clear Fields"
                                onAction="#handleClearFields"/>
                    </children>
                </VBox>
            </children>
            <HBox alignment="BOTTOM_CENTER">
                <ImageView id="home_nav">
                    <Image url="@/sample/images/arrow_nav.png"/>
                </ImageView>
            </HBox>
        </HBox>
    </children>
</VBox>
